{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": "dist",
    "target": "ES2022",
    "module": "CommonJS",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "importHelpers": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}